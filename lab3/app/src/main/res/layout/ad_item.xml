<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"

        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ad_banner"
        >

        <TextView
            android:id="@+id/overline"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:text="@string/technology"
            android:textSize="12sp"
            android:textColor="@color/ad_element_overline"
            android:fontFamily="@font/roboto_500"
            android:letterSpacing="0.04"

            app:layout_constraintBottom_toTopOf="@+id/headline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="@string/twitter_has_a_new_boss"
            android:textSize="16sp"
            android:textColor="@color/ad_element_headline"
            android:fontFamily="@font/roboto_500"
            android:letterSpacing="0.015"
            app:layout_constraintBottom_toTopOf="@+id/supporting_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overline" />

        <TextView
            android:id="@+id/supporting_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:textColor="@color/ad_element_supporting_text"
            android:text="@string/big_changes_are_coming"
            android:fontFamily="@font/roboto_400"
            android:letterSpacing="0.025"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headline" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ad_banner"
        android:layout_width="96dp"
        android:layout_height="56dp"
        android:src="@drawable/ad_illustration"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeImage"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

